extends layout
block content
    div(class="panel panel-default")
        div(class="panel-heading")
            h2 Viewing employee details for #[em] #{data.name}
        div(class="panel-body")
        ul 
            li
                h4 
                    span(style="color : blue") #{data.name} 
                    | works in 
                    span(style="color : blue") #{data.dept} 
                    | under 
                    span(style="color : blue") #{data.manager}
            li
                h4 
                    | The employee id is 
                    span(style="color : red") #{data._id}
            li
                h4 
                    | #{data.name} has 
                    span(style="color : red") #{data.leaves} leaves
        
        


    